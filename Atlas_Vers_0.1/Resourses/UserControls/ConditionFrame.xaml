                                            FontSize="12"
                                            Foreground="White" />

                                        <Image
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalAlignment="Bottom"
                                            Source="{Binding Path=Image}" />

                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Orientation="Horizontal" >

                                            <!--  Питание  -->

                                            <Image>
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=battaryStatus}" Value="3">
                                                                <Setter Property="Source" Value="/Resourses/Pictures/BUR/Wireless_Norm_Dark@4x.png" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=battaryStatus}" Value="1">
                                                                <Setter Property="Source" Value="/Resourses/Pictures/BUR/Wireless_Norm_Dark@4x.png" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=battaryStatus}" Value="0">
                                                                <Setter Property="Source" Value="/Resourses/Pictures/BUR/Wireless_Fail_Dark@4x.png" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=battaryStatus}" Value="2">
                                                                <Setter Property="Source" Value="/Resourses/Pictures/BUR/Wireless_Break_Dark@4x.png" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <Label Content="Питание" FontSize="14" Grid.Row="1" Grid.Column="3"/>

