                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <Border Background="#3a3e46" CornerRadius="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10*" />
                                            <RowDefinition Height="80*" />
                                            <RowDefinition Height="5" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
