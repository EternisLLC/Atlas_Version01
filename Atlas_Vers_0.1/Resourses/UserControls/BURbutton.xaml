<UserControl
    x:Class="Atlas_Vers_0._1.Resourses.UserControls.BURbutton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atlas_Vers_0._1.Resourses.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button
        Width="200"
        HorizontalContentAlignment="Left"
        Background="#B1B1B1"
        BorderThickness="0"
        Cursor="Hand"
        FontFamily="Elektra Pro"
        FontSize="9"
        Foreground="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                <Image Source="/Resourses/Pictures/BUR/FS_Fire_Dark@4x.png" Stretch="Fill" />
            </StackPanel>
        </Grid>
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="1" />
            </Style>
        </Button.Resources>
        <Button.Effect>
            <DropShadowEffect BlurRadius="10" />
        </Button.Effect>
    </Button>
</UserControl>
