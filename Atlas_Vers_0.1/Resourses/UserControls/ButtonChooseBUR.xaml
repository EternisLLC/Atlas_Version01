<UserControl
    x:Class="Atlas_Vers_0._1.Resourses.UserControls.ButtonChoose"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atlas_Vers_0._1.Resourses.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding SystemChoiceVM, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Button
        Width="200"
        Height="40"
        BorderThickness="0"
        Command="{Binding ChangeFrameToBURlogin}"
        CommandParameter="\View\Windows\BurLogin.xaml"
        Style="{DynamicResource BTNSelect}">
        <Button.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resourses/Pictures/btn_select_inactive.png" Stretch="Fill" />
        </Button.Background>
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Button.Resources>
    </Button>
</UserControl>
