<Window
    x:Class="Atlas_Vers_0._1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atlas_Vers_0._1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Atlas_Vers_0._1.Resourses.UserControls"
    Width="1000"
    Height="600"
    MinWidth="1000"
    MinHeight="600"
    AllowsTransparency="True"
    DataContext="{Binding MainVM, Source={StaticResource Locator}}"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseDown="Window_MouseDoubleClick">
            <uc:TitleBar />
        </Grid>

        <Frame
            x:Name="GlobalFrame"
            Grid.Row="1"
            NavigationUIVisibility="Hidden"
            Source="/View/Pages/BUR.xaml" />
    </Grid>
</Window>